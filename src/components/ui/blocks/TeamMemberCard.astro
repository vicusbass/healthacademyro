---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { name, details, image } = Astro.props;

interface Props {
  name: string;
  details: string;
  image: string;
}

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/images/team/*.{jpeg,jpg,png,gif}"
);
if (!images[image])
  throw new Error(
    `"${image}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  );
---

<div class="dark:bg-slate-800 flex items-center justify-center gap-10">
  <div
    class="group relative min-h-[200px] min-w-[320px] overflow-hidden rounded-xl bg-gray-100 p-5 shadow-xl hover:shadow-2xl dark:bg-neutral-700"
  >
    <div class="flex items-center gap-6">
      <Image
        src={images[image]()}
        alt={name}
        class="h-32 w-32 transform rounded-full object-cover object-center"
      />
      <div class="w-fit">
        <h1 class="font-bold text-gray-600 dark:text-gray-200">{name}</h1>
        <p class="text-gray-400">{details}</p>
      </div>
    </div>
  </div>
</div>
