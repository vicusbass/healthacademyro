---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://healthacademy.ro/tehnologii",
    url: "https://healthacademy.ro/tehnologii",
    name: "Tehnologii moderne | HealthAcademy",
    description: "Ne ocupam de sanatatea ta.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://healthacademy.ro",
      name: "HealthAcademy",
      description: "Servicii profesioniste de recuperare medicala.",
    },
    inLanguage: "ro-RO",
  }}
>
  <MainSection
    title="Tehnologiile viitorului"
    subTitle="La HealthAcademy folosim cele mai moderne tehnologii din fizioterapie. Si le folosim exact cum ai tu nevoie pentru sanatatea ta."
    btnExists={true}
    btnTitle="Contacteaza-ne"
    btnURL="/contact"
  />
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
</MainLayout>
